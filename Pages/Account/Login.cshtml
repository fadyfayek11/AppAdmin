@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<link rel="stylesheet" href="/assets/vendors/mdi/css/materialdesignicons.min.css" />
<link rel="stylesheet" href="/assets/vendors/flag-icon-css/css/flag-icon.min.css" />
<link rel="stylesheet" href="/assets/vendors/css/vendor.bundle.base.css" />
<link rel="stylesheet" href="/assets/vendors/select2/select2.min.css" />
<link rel="stylesheet" href="/assets/vendors/select2-bootstrap-theme/select2-bootstrap.min.css" />
<link rel="stylesheet" href="/assets/css/style.css" />
<link rel="stylesheet" href="/assets/css/custom-css.css" />
<link rel="shortcut icon" href="/assets/images/favicon.png" />
<section class="vh-100 gradient-custom">
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-12 col-md-8 col-lg-6 col-xl-5">
				<div class="card bg-dark text-white" style="border-radius: 1rem;">
					<div class="card-body p-5 text-center">
						<form method="post">
							<div id="loader" class="loader"></div>
							<div class="mb-md-5 mt-md-4 pb-5">

								<h2 class="fw-bold mb-2 text-uppercase">Login</h2>
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<p class="text-white-50 mb-5">Please enter your login and password!</p>

								<div class="form-group mb-4">
									<label for="username" class="text-white">Username</label>
									<input type="text" asp-for="Input.UserName" id="username" placeholder="Username" class="form-control form-control-lg" style="background-color: white !important;" />
									<span asp-validation-for="Input.UserName" class="text-danger"></span>
								</div>

								<div class="form-group position-relative mb-4">
									<label for="password" class="text-white">Password</label>
									<div class="input-group">
										<input type="password" asp-for="Input.Password" id="password" placeholder="Password" class="form-control form-control-lg" style="background-color: white !important;" />
										<div class="input-group-append">
											<button type="button" class="btn btn-link text-secondary" id="togglePassword">
												<i class="fa-solid fa-eye"></i>
											</button>
										</div>
									</div>
									<span asp-validation-for="Input.Password" class="text-danger"></span>
								</div>

								<div class="custom-control custom-checkbox mb-4">
									<input type="checkbox" asp-for="Input.RememberMe" id="rememberMe" class="custom-control-input" />
									<label class="custom-control-label text-white" for="rememberMe">Remember me</label>
								</div>
        
								<button class="btn btn-info btn-lg px-5" type="submit">Login</button>
							</div>
						</form>


					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<partial name="_ValidationScriptsPartial" />

<script src="/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="/assets/vendors/select2/select2.min.js"></script>
<script src="/assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>
<script src="/assets/js/off-canvas.js"></script>
<script src="/assets/js/hoverable-collapse.js"></script>
<script src="/assets/js/misc.js"></script>
<script src="/assets/js/file-upload.js"></script>
<script src="/assets/js/typeahead.js"></script>
<script src="/assets/js/select2.js"></script>
<script src="https://kit.fontawesome.com/4a8137dc1d.js" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
<script>
	$(document).ready(function () {
		$('form').submit(function () {
			$('#loader').show();
		});
		document.getElementById("togglePassword").addEventListener("click", function () {
			const passwordInput = document.getElementById("password");
			if (passwordInput.type === "password") {
				passwordInput.type = "text";
			} else {
				passwordInput.type = "password";
			}
		});
	});

</script>