@model App.Admin.ViewModels.EditAbout

@{
    ViewData["Title"] = "EditAbout";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@{
    var action = Model.Id == 0 ? "Add New" : "Edit";
}
<div style="margin-left:5%;margin-right:5%">
    <h1>@action</h1>

    <h4>About</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditAbout" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="HeaderAr" class="control-label"></label>
                    <input asp-for="HeaderAr" class="form-control" />
                    <span asp-validation-for="HeaderAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HeaderEn" class="control-label"></label>
                    <input asp-for="HeaderEn" class="form-control" />
                    <span asp-validation-for="HeaderEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AboutAr" class="control-label"></label>
                    <input asp-for="AboutAr" class="form-control" />
                    <span asp-validation-for="AboutAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AboutEn" class="control-label"></label>
                    <input asp-for="AboutEn" class="form-control" />
                    <span asp-validation-for="AboutEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image1" class="control-label"></label>
                    <input asp-for="Image1" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="Image1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image2" class="control-label"></label>
                    <input asp-for="Image2" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="Image2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image3" class="control-label"></label>
                    <input asp-for="Image3" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="Image3" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="About">Back</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
