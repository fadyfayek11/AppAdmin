@model IEnumerable<App.Admin.Models.RoomDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DetailNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetailNameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsIcon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DetailNameEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetailNameAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsIcon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
