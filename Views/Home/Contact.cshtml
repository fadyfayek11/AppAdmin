            <div class="w-100"></div>
            <div class="col-md-3 d-flex">
                <div class="info rounded bg-white p-4">
                    <p style="display: grid;">
                        <span data-i18n="Address">Address:</span>
                        <span style="color: #bf984c;">
                            Abdullah Al Faisal Street فندق سنبات بلاتينيوم .شارع فيضة
                            الحمادة, 45142 Jazan, Saudi Arabia
                        </span>
                    </p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info rounded bg-white p-4">
                    <p>
                        <span data-i18n="Phone">Phone:</span> <a href="tel://+055 357 7272"><br />+055 357 7272</a>
                    </p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info rounded bg-white p-4">
                    <p><span data-i18n="Email">Email:</span> <a href="mailto:SanbatPlatinum@gmail.com">SanbatPlatinum@gmail.com</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info rounded bg-white p-4">
                    <p><span data-i18n="Website">Website</span> <a href="https://sanbatplatinum.business.site/?utm_source=gmb&utm_medium=referral"><br />Sanbat Platinum</a></p>
                </div>
            </div>
        </div>
        <div class="row block-9">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3817.419648617265!2d42.549781124023596!3d16.90457961653276!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1608098216068fa5%3A0xdabedc38f5dc5326!2z2YHZhtiv2YIg2LPZhtio2KfYqiDYqNmE2KfYqtmK2YbZitmI2YU!5e0!3m2!1sar!2seg!4v1686595425398!5m2!1sar!2seg" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</section>

@section Scripts
{
    <script>

        $(document).ready(function () {
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.parentElement.classList.remove('active');
            });
            const roomsLink = document.querySelector('a[data-i18n="contact"]');

            // Add 'active' class to the "Rooms" navigation item
            roomsLink.parentElement.classList.add('active');
        });
    </script>
}
